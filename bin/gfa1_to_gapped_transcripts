#!/usr/bin/env python3


'''gfa1_to_gapped_transcripts: convert a splice graph in GFA1 format into a
FASTA file where predicted introns are annotated with a trail of Ns
'''

import logging

from os.path import abspath

from exfi.arguments import gfa1_to_gapped_transcripts_args
from exfi.logger import set_up_logger
from exfi.io.gfa1_to_fasta import gfa1_to_gapped_transcripts


if __name__ == "__main__":

    PARSER = gfa1_to_gapped_transcripts_args()

    # Parse
    ARGS = vars(PARSER.parse_args())
    ARGS["gfa1"] = abspath(ARGS["gfa1"])
    ARGS["fasta"] = abspath(ARGS["fasta"])

    # Set up the logger
    LOGGER = set_up_logger(ARGS)

    MASKING = "none"
    if ARGS["soft_mask_overlaps"]:
        MASKING = "soft"
    if ARGS["hard_mask_overlaps"]:
        MASKING = "hard"

    gfa1_to_gapped_transcripts(
        fasta_out=ARGS["fasta"],
        gfa1_in=ARGS["gfa1"],
        gap_size=ARGS["number_of_ns"],
        masking=MASKING
    )

    logging.info("Done!")
